{% extends "::base.html.twig" %}
{% block body %}
<div class="row">
  <div class="col-sm-4">
    <ul class="scroller">
    {% for f in foto %}
      <li class="hovereffect">
        <img class="img-responsive" src="{% path f.image, 'reference' %}" alt="">
        <div class="overlay">
          <h2></h2>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="col-sm-8">
    <h1>Luisa galdo</h1>
    {% for v in video %}
<iframe class="vimeo" src="http://player.vimeo.com/video/{{ v.video.providerReference }}" width="100%" height="360" frameborder="0" ></iframe>
    {% endfor %}
    <!--<video class="img-responsive" loop autoplay><source src="https://vimeo.com/81428092"></video>-->
  </div>
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"></script>
<script src="{{ asset('public/js/jquery.simplyscroll.js') }}"></script>
<script type="text/javascript">
$(".scroller .simply-scroll-list").css({"height":"auto"});
        (function($) {
         $(function() {
          $(".scroller").simplyScroll({
            customClass: 'vert',
            orientation: 'vertical',
           speed:1,
           pauseOnHover:false,
           direction:'backwards',
           customClass:'vert'});
      });
     })(jQuery);
 </script>
{% endblock %}
