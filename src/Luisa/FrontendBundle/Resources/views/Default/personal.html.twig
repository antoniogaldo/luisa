{% extends "::base.html.twig" %}
{% block body %}
{% include 'FrontendBundle:Include:menu.html.twig' %}
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">

      <section id="main-slider" class="no-margin">
        <div id="homeCarousel" class="carousel slide">
          <ol class="carousel-indicators">
            {% for img in personal.gallery.galleryHasMedias %}
            <li data-target="#main-slider" data-slide-to="{{ loop.index -1 }}"{% if loop.first %} class="active"{% endif %}></li>
            {% endfor %}
          </ol>
          <div class="carousel-inner">
            {% for img in personal.gallery.galleryHasMedias %}
           <div class="item {% if loop.first %}active{% endif %}" style="background-image: url({% path img.media, 'reference'%})"></div>
            {% endfor %}
          </div>
        </div>
      <!--/.carousel-->
      <a class="prev hidden-xs" href="#main-slider" data-slide="prev"> <i class="fa fa-chevron-left"></i> </a> <a class="next hidden-xs" href="#main-slider" data-slide="next"> <i class="fa fa-chevron-right"></i> </a>
      </section>


    </div>
  </div>
</div>

{% endblock %}
